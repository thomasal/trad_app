<p id="notice"><%= notice %></p>

<p>
  <strong>Nom trader:</strong>
  <%= @trader.nom_trader %>
  <br>
  <strong>Transactions :</strong>
    <tr>
      <td>prix</td>
      <td>quantity </td>
      <td>date_transaction </td>
      <td>equity </td>
    </tr><br>
  <% Transaction.where("trader_id = ?", @trader.id).each do |t| %>
    <tr>
      <td><%= t.prix %></td>
      <td><%= t.quantity %></td>
      <td><%= t.date_transaction %></td>
      <td><%= t.equity.nom_action %></td>
    </tr>
  <% end %>
</p>

<%= link_to 'Edit', edit_trader_path(@trader) %> |
