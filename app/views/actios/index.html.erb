<p id="notice"><%= notice %></p>

<h1>Listing Actios</h1>

<table>
  <thead>
    <tr>
      <th>Nom action</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actios.each do |actio| %>
      <tr>
        <td><%= actio.nom_action %></td>
        <td><%= link_to 'Show', actio %></td>
        <td><%= link_to 'Edit', edit_actio_path(actio) %></td>
        <td><%= link_to 'Destroy', actio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Actio', new_actio_path %>
